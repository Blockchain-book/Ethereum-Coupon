<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.babara.coupon_customer_part.activity.HelpActivity">

    <LinearLayout
        android:id="@+id/tab_help_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/help_back"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_height="20dp"
            app:srcCompat="@mipmap/backbar"/>
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text= "帮助" />
    </LinearLayout>

    <TextView
        android:layout_below="@id/tab_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="此处展示帮助信息，现无"/>
</RelativeLayout>
